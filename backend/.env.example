# Beispiel-Umgebungsvariablen für den Backend-Server
# Kopiere diese Datei zu .env und passe die Werte an

# MongoDB Verbindungsstring
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/scuric-dashboard

# Server-Port
PORT=5000

# Node Environment
NODE_ENV=development

# CORS-Origin für Frontend-Zugriff
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://localhost:5174,https://dashboard-l.vercel.app

# JWT Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=30d

# Redis Configuration for PowerDialer Background Jobs (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Aircall API Configuration
AIRCALL_API_KEY=your_aircall_api_key
AIRCALL_API_SECRET=your_aircall_api_secret

# PowerDialer Settings
ENABLE_MOCK_MODE=true
FORCE_COMPLETE_MOCK=true

# Logging Level
LOG_LEVEL=info

# SipGate OAuth2 Configuration
SIPGATE_CLIENT_ID=your_sipgate_client_id
SIPGATE_CLIENT_SECRET=your_sipgate_client_secret
SIPGATE_REDIRECT_URI=https://your-domain.com/api/auth/sipgate/callback
SIPGATE_DEVICE_ID=e0
SIPGATE_CALLER_ID=+491234567890

# Security
TOKEN_ENCRYPTION_KEY=32_chars_hex_for_aes256_encryption